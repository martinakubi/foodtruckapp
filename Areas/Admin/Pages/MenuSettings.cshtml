@page "/admin/menusettings"
@model FoodTruckApp.Areas.Admin.Pages.MenuSettingsModel
@{
}
<h1>Menu:</h1>
<br />
@if(!Model.RestaurantItems.Any())
{
    <a href="/admin/menu/0" class="btn btn-primary">Add Items to Menu.</a>
    return;
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Price</th>
            <th>Type</th>
            <th>Ability</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restauranItem in Model.RestaurantItems)
        {
            <tr onclick="window.location='/admin/menu/@(restauranItem.Id)'">

                <td>@restauranItem.Id</td>
                <td>@restauranItem.Name</td>
                <td>@restauranItem.Description</td>
                <td>
                     <img class="img-fluid mx-auto d-block" src="@Url.Content(restauranItem.ImagePath)" alt="@restauranItem.Name" style="max-height: 60px;" />
                </td>
                <td>@restauranItem.Price.ToString("# ##0")</td>
                <td>@restauranItem.MealType</td>
                <td>@restauranItem.Ability</td>
            </tr>
        }
    </tbody>
</table>
