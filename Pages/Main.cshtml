@page "/main"
@model MainModel
@{
    ViewData["Title"] = "Main dish";
}

<h1>Main course</h1>
<br>
<div class="container">
    <div class="row">
        @foreach (var item in Model.RestaurantItems)
        {
            <div class="col-6 col-md-4 col-lg-2 mb-4 text-center">
                <a href="/menu/@item.Kod" class="text-decoration-none text-dark">
                    @if(item.ImagePath.Length > 1)
                    {
                    <img src="@item.ImagePath" alt="@item.Name"
                         class="img-fluid mb-2" style="max-height: 150px;" />
                    }
                    <h5>@item.Name</h5>
                    <p>@item.Price.ToString("# ##0") ISK</p>
                </a>
            </div>
        }
    </div>
</div>
